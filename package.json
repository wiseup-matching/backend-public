{
  "name": "wiseup-backend",
  "version": "1.0.0",
  "description": "WiseUp Backend API",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:debug": "tsx --inspect watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "generate:api": "npx @openapitools/openapi-generator-cli generate -i openapi.yaml -g typescript-fetch -o src/api/openapi-client/",
    "generate:api:all": "npm run generate:api && npm run generate:api:frontend",
    "generate:api:frontend": "cd ../Frontend && npm run generate:api",
    "db:seed": "npm run build && node dist/db/init.js && node dist/db/seed.js",
    "db:wipe": "tsx ./src/db/wipe.ts",
    "db:init": "npm run build && node dist/db/init.js",
    "stripe:listen": "source .env && stripe listen --api-key $STRIPE_SECRET_KEY --forward-to localhost:4000/api/stripe-webhook"
  },
  "dependencies": {
    "@getbrevo/brevo": "^1.0.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/multer": "1.4.13",
    "@types/node-cron": "^3.0.11",
    "@types/stripe": "^8.0.416",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "haversine-distance": "^1.2.4",
    "helmet": "8.1.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "8.0.5",
    "mongoose": "^8.15.1",
    "morgan": "1.10.0",
    "multer": "2.0.1",
    "node-cron": "^4.2.0",
    "sharp": "0.34.2",
    "socket.io": "4.8.1",
    "stripe": "^18.2.1",
    "uuid": "11.1.0",
    "zod": "3.25.49"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "2.20.2",
    "@types/cors": "2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "1.9.9",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "8.33.0",
    "@typescript-eslint/parser": "8.33.0",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.2",
    "eslint-plugin-import": "2.31.0",
    "prettier": "3.5.3",
    "ts-node": "10.9.2",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.33.0"
  }
}
